@model AdminAppUserVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<section class="section-content padding-y">
    <div class="container">
        <div class="row">
            <div class="col-lg-6" style="text-align:center">
                @if (ViewBag.Success != null)
                {
                    <h5 class="text-success">@ViewBag.Success</h5>}
                else
                {
                    <div asp-validation-summary="All"></div>
                }

            </div>
        </div>
    </div>
    <!-- ============================ COMPONENT REGISTER   ================================= -->
    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
        <article class="card-body">
            <header class="mb-4"><h4 class="card-title">Kullanıcı Ekle</h4></header>
        <br />
            <form asp-action="Create" asp-controller="Home" method="post">
                <div class="form-row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  
                        <div class="col form-group">
                            <label>Ad</label>
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div> <!-- form-group end.// -->
                        <div class="col form-group">
                            <label>Soyad</label>
                            <input asp-for="LastName" required type="text" class="form-control" placeholder="">
                            <span asp-validation-for="LastName" class="text-danger"></span>

                        </div> <!-- form-group end.// -->
                    </div> <!-- form-row end.// -->
                    <div class="form-group">
                        <label>UserName</label>
                        <input asp-for="UserName" required type="text" class="form-control" placeholder="">
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div> <!-- form-group end.// -->
                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="Email" required type="email" class="form-control" placeholder="">
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div> <!-- form-group end.// -->


                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Şifre</label>
                            <input asp-for="Password" required class="form-control" type="password">
                        </div> <!-- form-group end.// -->
                        <div class="form-group col-md-6">
                            <label>Şifre Tekrar</label>
                            <input asp-for="RepeatPassword" required class="form-control" type="password">
                        </div> <!-- form-group end.// -->
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Kullanıcı Ekle </button>
                    </div> <!-- form-group// -->
                    
</form>
        </article><!-- card-body.// -->
    </div> <!-- card .// -->
    <p class="text-center mt-4">Zaten hesabım var. O zaman <a asp-action="Login" asp-controller="Account">Giriş Yap</a></p>
    <br><br>
    <!-- ============================ COMPONENT REGISTER  END.// ================================= -->


</section>
