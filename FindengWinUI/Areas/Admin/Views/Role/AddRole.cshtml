@model AppUserRole
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-2">
            <form asp-action="AddRole" asp-controller="Role" method="post">

                <div class="form-group">
                    <label>Rol Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Rol Adı" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary float-right">Rol Oluştur</button>
            </form>
        </div>
    </div>
</div>

