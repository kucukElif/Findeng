@model AppUserCV
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-6" style="margin-left:250px">
                <!-- general form elements -->
                <div class="card card-primary">

                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="container" style="margin-left:30px">

                        <div class="row">
                            @if (Model.ImagePath == "noimage.jpg")
                            {
                                <img class="img-fluid" style="width:250px; height:250px;" src="~/images/noimage.jpg" />
                            }
                            else
                            {
                                <img class="img-fluid" style="width:250px; height:250px;" src="~/images/@Model.ImagePath" />

                            }
                        </div>
                    </div>
                    <form role="form" asp-action="EditProfile" asp-controller="Member" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Departman</label>
                                <input asp-for="Department" type="text" class="form-control" placeholder="Departmanınızı giriniz">
                            </div>
                            <div class="form-group">
                                <label>Telefon Numarası</label>
                                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Telefon numaranızı giriniz">
                            </div>


                            <div class="form-group">
                                <label>Resim Ekle</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input class="custom-file-input" name="image"  type="file" id="customFileLang" />
                                        <label class="custom-file-label" for="customFileLang">Fotoğraf Ekle</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- /.box-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Profilimi güncelle</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
                <!-- Form Element sizes -->


            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
       
        $(document).ready(function () {


            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });


        });

    </script>
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>


}




