@model AppUserWork
@{
    ViewData["Title"] = "PostJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/bootstrap.css" rel="stylesheet" />
<section class="section-content padding-y">

    <div class="card mx-auto" style="max-width:375px; margin-top:40px;">

        <article class="card-body">
            <header class="mb-4"><h4 class="card-title">İş İlanı Ver</h4></header>
            <form enctype="multipart/form-data" asp-action="PostJob" asp-controller="Member" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="form-group">
                    <label>İş Ünvanı</label>
                    <input asp-for="Title" type="text" class="form-control" placeholder="İş Ünvanı">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div> <!-- form-group end.// -->
                <div class="form-group">
                    <label>Şirket</label>
                    <input asp-for="Company" type="text" class="form-control" placeholder="Şirket">
                    <span asp-validation-for="Company" class="text-danger"></span>

                </div> <!-- form-group end.// -->
                <!-- form-row end.// -->



                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea asp-for="Description" type="text" class="form-control" placeholder="Açıklama yapın..." style="height:200px"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label>Başlangıç Tarihi</label>
                    <input asp-for="startDate" type="date" class="form-control" placeholder="">
                    <span asp-validation-for="startDate" class="text-danger"></span>

                </div>

                <div class="form-group ">
                    <label>İşin Bulunduğu Konum</label>
                    <select id="inputState" class="form-control" asp-for="Location">
                        <option selected="">İşin Bulunduğu Konum</option>
                        <option>Uzbekistan</option>
                        <option>Russia</option>
                        <option>Türkiye</option>
                        <option>India</option>
                        <option>Afganistan</option>
                    </select>
                    <span asp-validation-for="Location" class="text-danger"></span>

                </div> <!-- form-group end.// -->


                <div class="form-group ">
                    <label>İstihdam Türü</label>
                    <select id="inputState" class="form-control" asp-for="employmentType">
                        <option selected="">Birini seçin... </option>
                        <option>Tam Zamanlı</option>
                        <option>Yarı Zamanlı</option>
                        <option>Sözleşmeli</option>
                        <option>Geçici</option>
                        <option>Gönüllü</option>
                        <option>Stajyer</option>

                    </select>
                    <span asp-validation-for="employmentType" class="text-danger"></span>

                </div> <!-- form-group end.// -->

                <div class="form-group">
                    <label>Logo Ekle</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="logo" />
                            <label class="custom-file-label">Logo Ekle</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Yayınla</button>
                </div> <!-- form-group// -->


            </form>
        </article><!-- card-body.// -->
    </div> <!-- card .// -->
    <br><br>


</section>

@section scripts{
    <script src="~/js/jquery-3.5.1.min.js"></script>


    <script>

        $('.custom-file-input').on('change', function () {
            //get the file name
            var fileName = $(this).val().split("\\").pop();
            //replace the "Choose a file" label
            $(this).next('.custom-file-label').html(fileName);
        });



    </script>


}

