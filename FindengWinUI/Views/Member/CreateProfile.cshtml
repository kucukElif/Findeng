@model AppUserCV
@{
    ViewData["Title"] = "CreateProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-6" style="margin-left:250px">
                <!-- general form elements -->
                <div class="card card-primary">

                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" asp-action="CreateProfile" asp-controller="Member" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Departman</label>
                                <input asp-for="Department" type="text" class="form-control" placeholder="Başlık Giriniz" style="width:500px;">
                            </div>
                            <div class="form-group">
                                <label>Telefon Numarası</label>
                                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Başlık Giriniz" style="width:500px;">
                            </div>


                            <div class="form-group">
                                <label>Resim Ekle</label>
                                <div class="input-group" style="width:500px;">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="image" id="customeFileLang"  />
                                        <label class="custom-file-label" for="customfileLang">Fotoğraf Ekle</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- /.box-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
                <!-- Form Element sizes -->


            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        bsCustomFileInput.init();
        $('custom-file-input').on('change', function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('custom-file-label').html(fileName);
        });
   
    </script>

}

