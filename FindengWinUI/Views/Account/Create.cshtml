@model AppUserVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-content padding-y">
  
    <!-- ============================ COMPONENT REGISTER   ================================= -->
    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">

        <article class="card-body">
            <header class="mb-4"><h4 class="card-title">Kaydol</h4></header>
            <form enctype="multipart/form-data" asp-action="Create" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="col form-group">
                        <label>Ad</label>
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div> <!-- form-group end.// -->
                    <div class="col form-group">
                        <label>Soyad</label>
                        <input asp-for="LastName" type="text" class="form-control" placeholder="">
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </div> <!-- form-group end.// -->
                </div> <!-- form-row end.// -->
                <div class="form-group">
                    <label>UserName</label>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="">
                    <span asp-validation-for="UserName" class="text-danger"></span>

                </div> <!-- form-group end.// -->
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email"  class="form-control" placeholder="">
                    <small class="form-text text-muted">E-postanızı asla başkalarıyla paylaşmayacağız.</small>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div> <!-- form-group end.// -->
                <div class="form-group">
                    <label>Phone</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="0555 555 55 55">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                </div> <!-- form-group end.// -->
                <div class="form-group">
                    <label>Doğum Tarihi</label>
                    <input asp-for="BirthDay" type="date" class="form-control" placeholder="">
                    <span asp-validation-for="BirthDay" class="text-danger"></span>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>City</label>
                        <input asp-for="City" type="text" class="form-control">
                        <span asp-validation-for="City" class="text-danger"></span>

                    </div> <!-- form-group end.// -->
                    <div class="form-group col-md-6">
                        <label>Country</label>
                        <select id="inputState" class="form-control">
                            <option> Choose...</option>
                            <option>Uzbekistan</option>
                            <option>Russia</option>
                            <option selected="">Türkiye</option>
                            <option>India</option>
                            <option>Afganistan</option>
                        </select>
                    </div> <!-- form-group end.// -->
                </div> <!-- form-row.// -->
                <div class="form-row">
                    <div class=form-group>
                        <label>
                            Cinsiyet
                        </label>
                        <select class="form-control" asp-for="Gender" asp-items="ViewBag.Gender"></select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Şifre</label>
                        <input asp-for="Password" class="form-control" type="password" id="password">
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div> <!-- form-group end.// -->
                    <div class="form-group col-md-6">
                        <label>Şifre Tekrar</label>
                        <input asp-for="RepeatPassword" class="form-control" type="password">
                        <span asp-validation-for="RepeatPassword" class="text-danger"></span>

                    </div> <!-- form-group end.// -->
                </div>

